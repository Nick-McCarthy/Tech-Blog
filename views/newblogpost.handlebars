<h2>Create New Blog </h2><h2><a href="/dashboard" class="exit-btn">Exit</a></h2>

<form class="form newBlog-form">
  <div class="mb-3 form-group">
    <label for="newBlog-title" class="newBlog-form">Title:</label>
    <input class="form-input" id="newBlog-title" type="text" maxlength="50">
  </div>
  <div class="mb-3 form-group">
    <label for="newBlog-description" class="newBlog-form">Description:</label>
    <textarea class="form-input" id="newBlog-description" rows="3" maxlength="300"></textarea>
  </div>
  <div class="form-group">
    <button class="btn btn-primary btn-lg" type="submit">Create</button>
  </div>
</form>

<script src="/js/newblogpost.js"></script>